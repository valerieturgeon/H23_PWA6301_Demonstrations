@model IEnumerable<Publisher>

<div class="container p-3 DivBgForm">
  <div class="row pt-4">
    <div class="col-10">
      <h2 class="text-primary">Publishers' List</h2>
    </div>
    <div class="col-2 text-right">
      <a asp-controller="Publisher" asp-action="Create" class="btn btn-success">
        Create New Publisher
      </a>
    </div>
  </div>

  <br /><br />
  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped border-primary" style="width:100%">
      <thead class="bg-primary">
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.Name)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Speciality)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.PublisherSite)
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-striped table-light border-dark border-1">
        @foreach (var item in Model.OrderBy(s => s.Name))
        {
          <tr class="text-dark">
            <td width="30%">@item.Name</td>
            <td width="25%">@item.Speciality</td>
            <td width="20%">@item.PublisherSite</td>
            <td width="25%" class="text-center">
              <div class="w-75 btn-group" role="group">
                <a class="btn btn-secondary mx-2" asp-controller="Publisher" asp-action="Detail" asp-route-id="@item.Id">
                  Details
                </a><a class="btn btn-warning mx-2">
                  Edit
                </a>
                <a class="btn btn-danger mx-2">
                  Delete
                </a>
              </div>
            </td>
          </tr>

        }

      </tbody>
    </table>
  }
  else
  {
    <p>No publisher exists.</p>
  }
</div>
